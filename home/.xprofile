export GTK_IM_MODULE=fcitx
export QT_IM_MODULE=fcitx
export XMODIFIERS=@im=fcitx

export HD_HOME="/hd_home/marucs"

export PATH="$HOME/.cargo/bin:$HOME/.local/bin:$PATH"
export GRADLE_USER_HOME="$HD_HOME/.gradle"

export AUDIO_RECORDINGS_PATH="$HOME/Music/Recordings"

alias record='filename="$AUDIO_RECORDINGS_PATH/$(date --iso-8601=seconds | sed "s/:/-/g").mp3" && echo "Recording as $filename" && parec --format=s16le -d alsa_output.pci-0000_00_1f.3.analog-stereo.monitor | lame -r --quiet -q 3 --lowpass 17 --abr 192 - "$filename"'
function recstart() { record & disown; echo "Stopping in $1 seconds"; sleep $1 && recstop. }
alias recstop='killall -q parec lame'
