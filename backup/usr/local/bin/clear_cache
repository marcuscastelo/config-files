#!/bin/sh

CACHE="$HOME/.cache"

function clear_daily() {
  echo "Deleting spotify cache"
  rm -rf $"CACHE/spotify"
}
 
function clear_weekly() {
  echo "Deleting yay cache"
  rm -rf $"CACHE/yay"
}

input="$1"

([ "$input" == "daily" ] && clear_daily) ||
([ "$input" == "weekly" ] && clear_weekly ) ||
echo "'$input' is not a valid parameter (valid: daily, weekly)"

